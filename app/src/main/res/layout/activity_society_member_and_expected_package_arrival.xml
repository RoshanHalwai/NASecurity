<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nammaapartmentsecurityhome.societymember.SocietyMemberAndExpectedPackageArrival">

    <include layout="@layout/activity_base" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/animationWaitingToLoadData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editApartment"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:visibility="invisible"
        app:indicatorColor="@color/nmBlack"
        app:indicatorName="BallSpinFadeLoaderIndicator" />

    <TextView
        android:id="@+id/textApartment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/editApartment"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:text="@string/apartment"
        android:textAllCaps="true"
        android:textColor="@color/nmBlack"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editApartment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/textFlat"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:inputType="textVisiblePassword"
        android:textColor="@color/nmBlack"
        android:textSize="@dimen/edit_text_default_size"
        tools:ignore="LabelFor,TextFields" />

    <TextView
        android:id="@+id/textFlat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/editFlat"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginTop="10dp"
        android:text="@string/flat"
        android:textAllCaps="true"
        android:textColor="@color/nmBlack"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editFlat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttonVerifyResidentAndPackageVendor"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:inputType="textVisiblePassword"
        android:textColor="@color/nmBlack"
        android:textSize="@dimen/edit_text_default_size"
        tools:ignore="LabelFor,TextFields" />

    <Button
        android:id="@+id/buttonVerifyResidentAndPackageVendor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/button_margin"
        android:background="@color/nmBlack"
        android:text="@string/verify_resident"
        android:textAllCaps="true"
        android:textColor="@color/nmLightYellow"
        android:textSize="@dimen/button_default_size" />

</RelativeLayout>